  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "kill": "lsof -ti:8081 | xargs kill -9 2>/dev/null || true && rm -rf /tmp/metro-* /tmp/haste-* ~/.metro 2>/dev/null || true",
    "clean": "npm run kill && rm -rf node_modules ios/Pods ios/build android/build android/app/build && npm install && cd ios && pod install && cd ..",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean:ios": "rm -rf ios/Pods ios/build && cd ios && pod install && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease && cd ..",
    "build:android:bundle": "cd android && ./gradlew bundleRelease && cd ..",
    "build:android:install": "cd android && ./gradlew installRelease && cd ..",
    "build:ios:release": "react-native run-ios --configuration Release",
    "prebuild": "npm run clean",
    "build:all": "npm run build:android:bundle && echo '\nâœ… Android bundle ready!' && echo 'ðŸ“± For iOS, open Xcode and Archive manually'",
    "icons": "./generate-icons.sh"
  },
