{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@database": ["./src/database"],
      "@database/*": ["./src/database/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@screens": ["./src/screens"],
      "@screens/*": ["./src/screens/*"],
      "@navigation": ["./src/navigation"],
      "@navigation/*": ["./src/navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
